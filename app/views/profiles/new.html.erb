<% if @profile.errors.any? %>
  <ul>
    <% @profile.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [@profile] do |f| %>
  <div>
    <%= f.label :fullname %>
    <%= f.text_field :fullname %>
  </div>
  <div>
    <%= f.label :socialname %>
    <%= f.text_field :socialname %>
  </div>
  <div>
    <%= f.label :birthdate %>
    <%= f.date_field :birthdate %>
  </div>
  <div>
    <%= f.label :education %>
    <%= f.text_field :education %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :experience %>
    <%= f.text_area :experience %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>